@model Dictionary<string, double> 

<div class="card">
    <div class="card-header">
        <a class="card-link" data-toggle="collapse" href="#@ViewData["name"]@ViewData["header"].ToString().Replace(" ", "_")" aria-expanded="false">
            <h3 class="text-center">@ViewData["header"]</h3>
            <div class="progress">
                <div class="progress-bar bg-danger" style="width:@Model["bad"].ToString().Replace(",", ".")%">
                    Bad
                </div>
                <div class="progress-bar bg-warning" style="width:@Model["mid"].ToString().Replace(",", ".")%">
                    Mid
                </div>
                <div class="progress-bar bg-success" style="width:@Model["good"].ToString().Replace(",", ".")%">
                    Good
                </div>
            </div>
        </a>
    </div>
    <div id="@ViewData["name"]@ViewData["header"].ToString().Replace(" ", "_")" class="collapse">
        <div class="card-body">
            <div class="container">
                <div class="row text-center">
                    <h5 class="col">
                        Bad: @Model["bad"]%
                    </h5>
                    <h5 class="col">
                        Mid: @Model["mid"]%
                    </h5>
                    <h5 class="col">
                        Good: @Model["good"]%
                    </h5>
                </div>
            </div>
        </div>
    </div>
</div>