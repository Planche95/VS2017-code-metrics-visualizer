@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1>Cm Visualizer</h1>
    <p>Code metrics in nice graphs</p>
</div>

<hr />

<div class="row align-items-center justify-content-center">
    <div class="d-flex justify-content-center">
        <div class="container">
            <button type="button" class="btn btn-primary rounded-circle btn-xxl" data-toggle="tooltip" title="Hooray!"><i class="fa fa-plus"></i></button>
            <button type="button" class="btn btn-primary rounded-circle btn-xl" data-toggle="modal" data-target="#myModal"><i class="fa fa-cog"></i></button>
        </div>
    </div>
</div>

<div class="container">
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h2 class="modal-title">Settings</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <ul class="nav nav-tabs nav-justified">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#">Project</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#">Namespace</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#">Class</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#">Function</a>
                    </li>
                </ul>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="modal-block">
                        <h5 class="modal-title">Maintability</h5>
                        <div class="progress">
                            <div class="progress-bar bg-danger" style="width:33.33%">
                                Bad
                            </div>
                            <div class="progress-bar bg-warning" style="width:33.33%">
                                Mid
                            </div>
                            <div class="progress-bar bg-success" style="width:33.33%">
                                Good
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col"><b>0</b></div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <b @*style="font-size:10px;"*@>100</b>
                            </div>
                        </div>
                    </div>

                    <div class="modal-block">
                        <h5 class="modal-title">Cyclomanic</h5>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width:33.33%">
                                Good
                            </div>
                            <div class="progress-bar bg-warning" style="width:33.33%">
                                Mid
                            </div>
                            <div class="progress-bar bg-danger" style="width:33.33%">
                                Bad
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col"><b>0</b></div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <b>∞</b>
                            </div>
                        </div>
                    </div>

                    <div class="modal-block">
                        <h5 class="modal-title">Deph of inheritance</h5>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width:33.33%">
                                Good
                            </div>
                            <div class="progress-bar bg-warning" style="width:33.33%">
                                Mid
                            </div>
                            <div class="progress-bar bg-danger" style="width:33.33%">
                                Bad
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col"><b>0</b></div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <b>∞</b>
                            </div>
                        </div>
                    </div>

                    <div class="modal-block">
                        <h5 class="modal-title">Lines od code</h5>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width:33.33%">
                                Good
                            </div>
                            <div class="progress-bar bg-warning" style="width:33.33%">
                                Mid
                            </div>
                            <div class="progress-bar bg-danger" style="width:33.33%">
                                Bad
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col"><b>0</b></div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <div class="col">
                                    <input type="text" value="0">
                                </div>
                                <b>∞</b>
                            </div>
                        </div>
                    </div> 
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="col"><input class="range" type="text" name="lname" value="0"></div>

<hr />
<div class="jumbotron"></div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();

            $("input").hover(function () {
                $(this).value = 300;
            });
        });
</script>
}